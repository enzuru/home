# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = me
maxsyncaccounts = 1

[Account me]
localrepository = me-Local
remoterepository = me-Remote
sync_labels = yes
autorefresh = 60.0

[Repository me-Local]
type = Maildir
localfolders = ~/mail/me

[Repository me-Remote]
type = IMAP
remotehost = mail.enzu.ru
remoteuser = me@enzu.ru
remotepass = whatever
ssl = yes

sslcacertfile = /etc/ssl/certs/ca-certificates.crt
