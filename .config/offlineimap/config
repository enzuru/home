[general]
accounts = me
maxsyncaccounts = 1

[Account me]
localrepository = me-Local
remoterepository = me-Remote
sync_labels = yes
autorefresh = 1.0

[Repository me-Local]
type = Maildir
localfolders = ~/mail/me

[Repository me-Remote]
type = IMAP
remotehost = imap.fastmail.com
remoteport = 993
remoteuser = me@enzu.ru
remotepass = password
ssl = yes

sslcacertfile = /etc/ssl/certs/ca-certificates.crt
